<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cancel_download"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="#43cfff"
        android:text="@string/search_cancel"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/cancel_download"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#33ffffff"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/cancel_download"
        android:gravity="center">
        <ImageView
            android:id="@+id/downloading_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/illustration_downloading"/>

        <TextView
            android:id="@+id/downloading_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/downloading_iv"
            android:layout_marginTop="12dp"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text=""/>
    </RelativeLayout>




</RelativeLayout>